@using BlackRose.Enum;
@model IEnumerable<BlackRose.Models.Equipment>

@{
    ViewData["Title"] = "СТРАЙКБОЛЬНОЕ ОБОРУДОВАНИЕ";
}

<h1 align="center">СТРАЙКБОЛЬНОЕ ОБОРУДОВАНИЕ</h1>

<p>
    <a asp-action="Create">Добавить новое</a>
</p>

<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
            <div class="col">
                    <a class="navbar-brand" align="center" asp-area="" asp-route-id="@item.Id" asp-controller="Equipments" asp-action="Details">
                    <h1>@Html.DisplayFor(modelItem => item.Name)</h1>
                </a>
                <div class="card shadow-sm">
                        @if (item.Image != null)
                        {
                            <a class="card-text" asp-area="" asp-route-id="@item.Id" asp-controller="Equipments" asp-action="Details">
                            <img style='width:350px; height:220px;' src="data:image/jpeg;base64,@(Convert.ToBase64String(item.Image))" />
                            </a>
                        }
                    <div class="card-body">
                            <p>@Html.DisplayFor(modelItem => item.Availability) в наличии или нет</p>
                        <p class="card-text">Описание: @Html.DisplayFor(modelItem => item.ShortDesc)</p>
                            <p class="card-text">Цена @Html.DisplayFor(modelItem => item.Price) руб.</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a type="btn-btn-success" asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-sm btn-outline-secondary">Изменить</a>
                                <a type="btn-btn-success" asp-action="Details" asp-route-id="@item.Id"  class="btn btn-sm btn-outline-secondary">Инфо</a>
                                <a type="btn-btn-success" asp-action="Delete" asp-route-id="@item.Id"  class="btn btn-sm btn-outline-secondary">Удалить</a>
                                <a type="btn-btn-success" asp-controller="ShopCart" asp-action="addtoCart" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Корзина</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>
